---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Aditya's Trashyard">
  <!-- Loading Screen -->
  <div class="loading-screen flex justify-center items-center h-screen w-screen bg-black text-white" id="loading-screen">
    <div class="trash-can">
      <div class="lid"></div>
      <div class="body"></div>
    </div>
    <p class="loading-text">Dumping trash...</p>
  </div>

  <main class="flex justify-center h-screen items-center px-4 bg-black text-white hidden" id="main-content">
    <div class="text-center animate-fade-in max-w-2xl mx-auto space-y-10">
      <!-- Heading Section -->
      <h1 class="text-7xl font-extrabold uppercase tracking-wide animate-text-glitch" style="font-family: 'Panic Stricken'">
        Aditya's Trashyard
      </h1>

      <!-- Intro Section -->
      <p class="text-lg font-bold mb-8 animate-slide-up">Welcome to the dumpster!</p>

      <!-- Logos Section -->
      <div class="logos flex flex-wrap justify-center gap-8 mb-10">
        <a class="logo-item group animate-hover-scale" href="https://youtube.com/@adityaredflag">
          <i class="fab fa-youtube w-8 h-8 text-white group-hover:text-gray-500"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">YouTube</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="https://www.roblox.com/users/3507400125/profile">
          <i class="fas fa-gamepad w-8 h-8 text-white group-hover:text-gray-500"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Roblox</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="https://github.com/adityaREDFLAG">
          <i class="fab fa-github w-8 h-8 text-white group-hover:text-gray-500"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">GitHub</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="https://discord.com/invite/N9KD7au6hB">
          <i class="fab fa-discord w-8 h-8 text-white group-hover:text-gray-500"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Discord</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="https://www.instagram.com/noblixzy/">
          <i class="fab fa-instagram w-8 h-8 text-white group-hover:text-gray-500"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Instagram</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="mailto:adi.redflag@gmail.com">
          <i class="fas fa-envelope w-8 h-8 text-white group-hover:text-gray-500"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Mail</span>
        </a>
      </div>

      <!-- Easter Egg -->
      <p id="easter-egg" class="text-green-400 hidden mt-4 animate-bounce-in">You found the Easter egg! </p>
    </div>
  </main>

  <!-- Font Awesome CDN Link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- Google Fonts Link for Panic Stricken font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Panic+Stricken&display=swap" rel="stylesheet">

  <!-- Animation Styles -->
  <style>
    /* ... (animation styles remain the same) */

    /* Loading Screen Styles */
    .loading-screen {
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1000;
    }

    .trash-can {
      position: relative;
      width: 100px;
      height: 100px;
      background-color: #333;
      border-radius: 10px;
    }

    .lid {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 20px;
      background-color: #444;
      border-radius: 10px 10px 0 0;
      animation: lid-open 1s ease-in-out infinite;
    }

    @keyframes lid-open {
      0% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-20px);
      }
      100% {
        transform: translateY(0);
      }
    }

    .body {
      position: absolute;
      top: 20px;
      left: 0;
      width: 100%;
      height: 80px;
      background-color: #333;
      border-radius: 0 0 10px 10px;
    }

    .loading-text {
      font-size: 24px;
      font-family: 'Panic Stricken';
      margin-top: 20px;
    }
  </style>

  <!-- Script Section for Loading Screen -->
  <script>
    window.addEventListener('load', () => {
      const loadingScreen = document.getElementById('loading-screen');
      const mainContent = document.getElementById('main-content');

      loadingScreen.classList.add('hidden');
      mainContent.classList.remove('hidden');
    });

    let spaceCount = 0;
    
    document.addEventListener('keydown', (event) => {
      if (event.code === 'Space') {
        spaceCount++;
        if (spaceCount === 5) {
          document.getElementById('easter-egg').classList.remove('hidden');
        }
      } else {
        spaceCount = 0; // Reset if any other key is pressed
      }
    });
  </script>
</Layout>
