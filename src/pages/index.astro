import Layout from "../layouts/Layout.astro";
---

<Layout title="Aditya">
  <main class="flex justify-center items-center h-screen px-4 bg-gradient-to-b from-black via-gray-900 to-red-800">
    <div class="text-center animate-flicker max-w-3xl mx-auto space-y-10">
      <!-- Heading Section -->
      <h1 class="text-8xl font-extrabold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-red-500 via-gray-100 to-red-600 tracking-widest uppercase trash-font">
        Aditya
      </h1>

      <!-- Intro Section -->
      <p class="text-lg font-medium text-gray-300">Welcome to the chaos!</p>

      <!-- Logos Section -->
      <div class="logos flex flex-wrap justify-center gap-8">
        <a class="logo-item group" href="https://youtube.com/@adityaredflag">
          <i class="fab fa-youtube text-3xl text-red-500 group-hover:text-gray-100 transition duration-300"></i>
          <span class="text-sm text-gray-400 group-hover:text-gray-100">YouTube</span>
        </a>
        <a class="logo-item group" href="https://www.roblox.com/users/3507400125/profile">
          <i class="fas fa-gamepad text-3xl text-gray-400 group-hover:text-gray-100 transition duration-300"></i>
          <span class="text-sm text-gray-400 group-hover:text-gray-100">Roblox</span>
        </a>
        <a class="logo-item group" href="https://twitter.com/adityaREDFLAG">
          <i class="fab fa-twitter text-3xl text-blue-400 group-hover:text-gray-100 transition duration-300"></i>
          <span class="text-sm text-gray-400 group-hover:text-gray-100">Twitter</span>
        </a>
        <a class="logo-item group" href="https://github.com/adityaREDFLAG">
          <i class="fab fa-github text-3xl text-gray-400 group-hover:text-gray-100 transition duration-300"></i>
          <span class="text-sm text-gray-400 group-hover:text-gray-100">GitHub</span>
        </a>
        <a class="logo-item group" href="https://discord.com/invite/N9KD7au6hB">
          <i class="fab fa-discord text-3xl text-indigo-500 group-hover:text-gray-100 transition duration-300"></i>
          <span class="text-sm text-gray-400 group-hover:text-gray-100">Discord</span>
        </a>
        <a class="logo-item group" href="https://www.instagram.com/noblixzy/">
          <i class="fab fa-instagram text-3xl text-pink-400 group-hover:text-gray-100 transition duration-300"></i>
          <span class="text-sm text-gray-400 group-hover:text-gray-100">Instagram</span>
        </a>
        <a class="logo-item group" href="mailto:adi.redflag@gmail.com">
          <i class="fas fa-envelope text-3xl text-gray-400 group-hover:text-gray-100 transition duration-300"></i>
          <span class="text-sm text-gray-400 group-hover:text-gray-100">Mail</span>
        </a>
      </div>

      <!-- Spotify Player Section -->
      <div class="spotify-player mx-auto max-w-lg">
        <iframe
          src="https://open.spotify.com/embed/track/5ovfCCeu5FtY6jf5Yk2huD?utm_source=generator"
          width="100%"
          height="80"
          frameBorder="0"
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          class="rounded-lg"
        ></iframe>
      </div>

      <!-- Easter Egg -->
      <p id="easter-egg" class="text-green-400 hidden mt-4">You found the Easter egg! ðŸ¥š</p>
    </div>
  </main>

  <!-- Font Awesome CDN Link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Metal+Mania&display=swap" rel="stylesheet">
</Layout>

<!-- Styling Section -->
<style>
  body {
    background: #0d0d0d;
    background-image: radial-gradient(circle, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      radial-gradient(circle, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 3px 3px, 3px 3px;
    background-blend-mode: overlay;
  }

  .trash-font {
    font-family: 'Metal Mania', sans-serif;
  }

  .logo-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    text-align: center;
  }

  .animate-flicker {
    animation: flicker 1.5s infinite alternate;
  }

  @keyframes flicker {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; transform: scale(1.02); }
  }
</style>

<!-- Script Section for Easter Egg -->
<script>
  let spaceCount = 0;

  document.addEventListener('keydown', (event) => {
    if (event.code === 'Space') {
      spaceCount++;
      if (spaceCount === 5) {
        document.getElementById('easter-egg').classList.remove('hidden');
      }
    } else {
      spaceCount = 0; // Reset if any other key is pressed
    }
  });
</script>
