---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Aditya's Trashyard">
  <main class="flex justify-center h-screen items-center px-4 bg-black text-white relative">
    <div class="text-center max-w-2xl mx-auto space-y-10">
      <!-- Heading Section -->
      <h1 class="text-7xl font-extrabold uppercase tracking-wide animate-text-glitch animate-fade-in" style="font-family: 'Panic Stricken'">
        Aditya's Trashyard
      </h1>

      <!-- Intro Section -->
      <p class="text-lg font-bold mb-8 animate-slide-up">Welcome to the dumpster!</p>

      <!-- Logos Section -->
      <div class="logos flex flex-wrap justify-center gap-8 mb-10">
        <a class="logo-item group animate-hover-scale" href="https://youtube.com/@adityaredflag">
          <i class="fab fa-youtube w-8 h-8 text-white group-hover:text-gray-500 animate-spin-on-hover"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">YouTube</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="https://www.roblox.com/users/3507400125/profile">
          <i class="fas fa-gamepad w-8 h-8 text-white group-hover:text-gray-500 animate-bounce-on-hover"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Roblox</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="https://github.com/adityaREDFLAG">
          <i class="fab fa-github w-8 h-8 text-white group-hover:text-gray-500 animate-spin-on-hover"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">GitHub</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="https://discord.com/invite/N9KD7au6hB">
          <i class="fab fa-discord w-8 h-8 text-white group-hover:text-gray-500 animate-bounce-on-hover"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Discord</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="https://www.instagram.com/noblixzy/">
          <i class="fab fa-instagram w-8 h-8 text-white group-hover:text-gray-500 animate-spin-on-hover"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Instagram</span>
        </a>
        <a class="logo-item group animate-hover-scale" href="mailto:adi.redflag@gmail.com">
          <i class="fas fa-envelope w-8 h-8 text-white group-hover:text-gray-500 animate-bounce-on-hover"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Mail</span>
        </a>
      </div>
    </div>
  </main>

  <!-- Font Awesome CDN Link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- Google Fonts Link for Panic Stricken font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Panic+Stricken&display=swap" rel="stylesheet">

  <!-- Animation Styles -->
  <style>
    .animate-text-glitch {
      animation: text-glitch 2s ease infinite;
    }

    @keyframes text-glitch {
      0% {
        text-shadow: 0 0 10px #ff69b4;
      }
      50% {
        text-shadow: 0 0 20px #ff69b4;
      }
      100% {
        text-shadow: 0 0 10px #ff69b4;
      }
    }

    .animate-fade-in {
      animation: fade-in 1s ease-in-out;
    }

    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-slide-up {
      animation: slide-up 1s ease-in-out;
    }

    @keyframes slide-up {
      from {
        transform: translateY(20px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    .animate-hover-scale {
      transition: transform 0.2s ease;
    }

    .animate-hover-scale:hover {
      transform: scale(1.1);
    }

    .animate-spin-on-hover {
      transition: transform 0.2s ease;
    }

    .animate-spin-on-hover:hover {
      animation: spin 1s ease infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }
    }

    .animate-bounce-on-hover {
      transition: transform 0.2s ease;
    }

    .animate-bounce-on-hover:hover {
      animation: bounce 1s ease infinite;
    }

    @keyframes bounce {
      0% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
      100% {
        transform: translateY(0);
      }
    }
  </style>
</Layout>
