---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Aditya's Trashyard">
  <main class="flex justify-center h-screen items-center px-4 bg-trashyard">
    <div class="text-center animate-fade-in max-w-2xl mx-auto space-y-10">
      <!-- Heading Section -->
      <h1 class="text-7xl font-extrabold text-trashy uppercase tracking-wide">
        Aditya's Trashyard
      </h1>

      <!-- Intro Section -->
      <p class="text-lg font-bold text-gray-200 mb-8">Welcome to the dumpster!</p>

      <!-- Logos Section -->
      <div class="logos flex flex-wrap justify-center gap-8 mb-10">
        <a class="logo-item group" href="https://youtube.com/@adityaredflag">
          <i class="fab fa-youtube w-8 h-8 text-gray-500 group-hover:text-white"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">YouTube</span>
        </a>
        <a class="logo-item group" href="https://www.roblox.com/users/3507400125/profile">
          <i class="fas fa-gamepad w-8 h-8 text-gray-500 group-hover:text-white"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Roblox</span>
        </a>
        <a class="logo-item group" href="https://twitter.com/adityaREDFLAG">
          <i class="fab fa-twitter w-8 h-8 text-gray-500 group-hover:text-white"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Twitter</span>
        </a>
        <a class="logo-item group" href="https://github.com/adityaREDFLAG">
          <i class="fab fa-github w-8 h-8 text-gray-500 group-hover:text-white"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">GitHub</span>
        </a>
        <a class="logo-item group" href="https://discord.com/invite/N9KD7au6hB">
          <i class="fab fa-discord w-8 h-8 text-gray-500 group-hover:text-white"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Discord</span>
        </a>
        <a class="logo-item group" href="https://www.instagram.com/noblixzy/">
          <i class="fab fa-instagram w-8 h-8 text-gray-500 group-hover:text-white"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Instagram</span>
        </a>
        <a class="logo-item group" href="mailto:adi.redflag@gmail.com">
          <i class="fas fa-envelope w-8 h-8 text-gray-500 group-hover:text-white"></i>
          <span class="hidden group-hover:inline-block text-white text-sm">Mail</span>
        </a>
      </div>

      <!-- Spotify Player Section -->
      <div class="mb-8">
        <iframe src="https://open.spotify.com/embed/track/5ovfCCeu5FtY6jf5Yk2huD?utm_source=generator"
          width="100%" height="80" frameBorder="0" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
      </div>

      <!-- Easter Egg -->
      <p id="easter-egg" class="text-green-400 hidden mt-4">You found the Easter egg! </p>
    </div>
  </main>

  <!-- Font Awesome CDN Link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- Styling Section -->
  <style>
    /* Trashyard Background */
    .bg-trashyard {
      background-image: linear-gradient(to bottom, #4d4d4d, #2f2f2f);
      background-size: 100% 300px;
      background-position: 0% 100%;
      animation: trashyard 10s ease infinite;
    }

    @keyframes trashyard {
      0% {
        background-position: 0% 100%;
      }
      100% {
        background-position: 0% 0%;
      }
    }
    /* Trashy Text */
    .text-trashy {
      text-shadow: 0 0 10px #ff69b4, 0 0 20px #ff69b4, 0 0 30px #ff69b4, 0 0 40px #ff69b4, 0 0 50px #ff69b4, 0 0 60px #ff69b4, 0 0 70px #ff69b4;
      color: #ffffff;
      font-family: 'Monoton', cursive;
    }

    /* Animations */
    .animate-fade-in {
      animation: fadeIn 1s ease-in-out;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Logo Styles */
    .logo-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: transform 0.2s ease;
    }

    .logo-item:hover {
      transform: scale(1.1);
    }

    /* Easter Egg Styles */
    #easter-egg {
      font-family: 'Monoton', cursive;
      font-size: 24px;
    }
  </style>

  <!-- Script Section for Easter Egg -->
  <script>
    let spaceCount = 0;
    
    document.addEventListener('keydown', (event) => {
      if (event.code === 'Space') {
        spaceCount++;
        if (spaceCount === 5) {
          document.getElementById('easter-egg').classList.remove('hidden');
        }
      } else {
        spaceCount = 0; // Reset if any other key is pressed
      }
    });
  </script>
</Layout>
