import Layout from "../layouts/Layout.astro";
---

<Layout title="ImreallyAdi">
  <main class="flex justify-center h-screen items-center px-4 bg-gradient-to-b from-black via-gray-900 to-red-900">
    <div class="text-center animate-flicker max-w-2xl mx-auto">
      <!-- Heading Section -->
      <h1 class="text-7xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-gray-200 via-red-500 to-white tracking-wider trash-font">
        Aditya
      </h1>

      <!-- Intro Section -->
      <p class="text-lg font-bold text-gray-200 mb-8">Welcome to the chaos!</p>

      <!-- Logos Section -->
      <div class="logos flex flex-wrap justify-center gap-8 mb-10">
        <a class="logo-item group" href="https://youtube.com/@adityaredflag">
          <i class="fab fa-youtube w-8 h-8 text-gray-500 group-hover:text-red-400"></i>
          <span class="hidden group-hover:inline-block text-red-400 text-sm">YouTube</span>
        </a>
        <a class="logo-item group" href="https://www.roblox.com/users/3507400125/profile">
          <i class="fas fa-gamepad w-8 h-8 text-gray-500 group-hover:text-red-400"></i>
          <span class="hidden group-hover:inline-block text-red-400 text-sm">Roblox</span>
        </a>
        <a class="logo-item group" href="https://twitter.com/adityaREDFLAG">
          <i class="fab fa-twitter w-8 h-8 text-gray-500 group-hover:text-red-400"></i>
          <span class="hidden group-hover:inline-block text-red-400 text-sm">Twitter</span>
        </a>
        <a class="logo-item group" href="https://github.com/adityaREDFLAG">
          <i class="fab fa-github w-8 h-8 text-gray-500 group-hover:text-red-400"></i>
          <span class="hidden group-hover:inline-block text-red-400 text-sm">GitHub</span>
        </a>
        <a class="logo-item group" href="https://discord.com/invite/N9KD7au6hB">
          <i class="fab fa-discord w-8 h-8 text-gray-500 group-hover:text-red-400"></i>
          <span class="hidden group-hover:inline-block text-red-400 text-sm">Discord</span>
        </a>
        <a class="logo-item group" href="https://www.instagram.com/imreallyadi/">
          <i class="fab fa-instagram w-8 h-8 text-gray-500 group-hover:text-red-400"></i>
          <span class="hidden group-hover:inline-block text-red-400 text-sm">Instagram</span>
        </a>
        <a class="logo-item group" href="mailto:adi.redflag@gmail.com">
          <i class="fas fa-envelope w-8 h-8 text-gray-500 group-hover:text-red-400"></i>
          <span class="hidden group-hover:inline-block text-red-400 text-sm">Mail</span>
        </a>
      </div>

      <!-- Spotify Player Section -->
      <div class="mb-8">
        <iframe src="https://open.spotify.com/embed/track/5ovfCCeu5FtY6jf5Yk2huD?utm_source=generator"
          width="100%" height="80" frameBorder="0" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
      </div>

      <!-- Easter Egg -->
      <p id="easter-egg" class="text-red-500 hidden mt-4">You found the Easter egg! ðŸ¥š</p>
    </div>
  </main>

  <!-- Font Awesome CDN Link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Metal+Mania&display=swap" rel="stylesheet">
</Layout>

<!-- Styling Section -->
<style>
  body {
    background: #0d0d0d; /* Black base */
    background-image: radial-gradient(circle, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      radial-gradient(circle, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 3px 3px, 3px 3px;
    background-blend-mode: overlay;
  }

  .trash-font {
    font-family: 'Metal Mania', sans-serif;
  }

  .animate-flicker {
    animation: flicker 1.5s infinite alternate;
  }

  @keyframes flicker {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; transform: scale(1.02); }
  }

  .logo-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .logo-item:hover {
    transform: rotate(-10deg) scale(1.2);
  }

  .group-hover\:text-red-400 {
    color: #f87171;
  }
</style>

<!-- Script Section for Easter Egg -->
<script>
  let spaceCount = 0;

  document.addEventListener('keydown', (event) => {
    if (event.code === 'Space') {
      spaceCount++;
      if (spaceCount === 5) {
        document.getElementById('easter-egg').classList.remove('hidden');
      }
    } else {
      spaceCount = 0; // Reset if any other key is pressed
    }
  });
</script>
